{
	"name": "labour-suggestion",
	"displayName": "Labour Suggestion",
	"description": "Shortcuts",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/infrastructure/extension.js",
	"contributes": {
		"languages": [
			{
				"aliases": [
					"Markdown",
					"md"
				],
				"id": "markdown",
				"extensions": [
					".md",
					".markdown"
				]
			}
		],
		"configuration": {
			"title": "Labour Suggestion",
			"properties": {
				"ls.filePath": {
					"type": "string",
					"default": "",
					"markdownDescription": "File containing a substitutions dictionary - use `{'substitutions': [{'shortcut': 'ho', 'word': 'hello'}]}` format."
				},
				"ls.dictionary": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"ho:hello"
					],
					"markdownDescription": "Substitutions dictionary. Deactivated if file is specified - use `shortcut:word` format *(e.g ho:hello)*"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"test": "mocha --require ts-node/register ./test/**/*.ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"should": "^13.2.3",
		"testdouble": "^3.16.0",
		"ts-node": "^8.10.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"publisher": "cfe",
	"repository": {
		"url": "https://github.com/cfe84/proletarian-wizard"
	},
	"dependencies": {
		"yaml": "^1.10.0"
	}
}
